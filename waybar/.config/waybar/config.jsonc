{
	"layer": "top",
	"position": "top",
	"height": 35,
	"spacing": 10,
	"margin-top": 3,
	"margin-right": 3,
	"margin-left": 3,
	"stylesheet": "$HOME/.config/waybar/style.css",
	"modules-left": [
		"custom/suse_button",
		"hyprland/workspaces",
		"hyprland/window",
		//"sway/window",
		//"sway/mode",
		"custom/mediaplayer"
	],
	"modules-center": [
		"clock#date",
		"clock#time"
	],
	"modules-right": [
		"tray",
		"cpu",
		"memory",
		"temperature",
		"disk",
		"backlight",
		"wireplumber",
		// "pulseaudio",
		"network",
		"bluetooth",
		"custom/weather",
		//"hyprland/language",
		"battery",
		"custom/power"
	],
	//Modules configuration
	//SUSE
	"custom/suse_button": {
		"format": " ",
		"on-click": "wofi --show drun -I -p \"Search\"",
		"on-click-right": "kitty sudo -E yast2",
		"tooltip": true
	},
	"hyprland/workspaces": {
		"all-outputs": true,
		"active-only": false,
		"warp-on-scroll": false,
		"icon-size": 32,
		"spacing": 16,
		"format": "{icon}",
		"on-click": "activate",
		"on-scroll-up": "hyprctl dispatch workspace e+1",
		"on-scroll-down": "hyprctl dispatch workspace e-1",
	},
	"hyprland/window": {
		"format": "{class} {title}",
		"icon": true,
		"icon-size": 15,
	},
	"sway/workspaces": {
		"disable-scroll": true,
		"all-outputs": true,
		"active-only": false,
		"warp-on-scroll": false,
		"format": "{icon}",
	},
	"sway/window": {
		"format": "{app_id}",
		"max-length": 20
	},
	"custom/mediaplayer": {
		"format": "{}",
		"tooltip": false,
		"interval": 1,
		"max-length": 45,
		"exec": "$HOME/.config/waybar/custom_modules/mediaplayer.sh",
		"on-click-right": "playerctl next",
		"on-click-left": "playerctl previous",
		"on-click": "playerctl play-pause",
	},
	"tray": {
		"icon-size": 13,
		"spacing": 3
	},
	"sway/mode": {
		"format": "<span style=\"italic\">{}</span>"
	},
	"clock#date": {
		"format": "<span color='#f9e2af'> </span>{:%e %b}",
		"tooltip-format": "<tt><big>{calendar}</big></tt>",
		"today-format": "{}",
		"on-click": "gnome-calendar",
		"min-length": 8,
		"max-length": 20
	},
	"clock#time": {
		"format": "<span color='#74c7ec'> </span>{:%H:%M}",
		"tooltip-format": "<tt><big>{calendar}</big></tt>",
		"on-click": "gnome-calendar",
		"min-length": 8,
		"max-length": 12
	},
	"battery#bat2": {
		"bat": "BAT2"
	},
	"battery": {
		"interval": 1,
		"states": {
			"good": 80,
			"warning": 25,
			"critical": 10
		},
		"format-icons": [
			" ",
			" ",
			" ",
			" ",
			" "
		],
		"format": "<span color='#a6e3a1'>{icon}</span>{capacity}%",
		"format-critical": "<span color='#f38ba8'>{icon}</span>{capacity}%",
		"format-warning": "<span color='#fab387'>{icon}</span>{capacity}%",
		"format-full": "<span color='#a6e3a1'>{icon}</span>{capacity}%",
		"format-charging": "<span color='#a6e3a1'></span>{capacity}%",
		"format-charging-warning": "<span color='#fab387'></span>{capacity}%",
		"format-charging-critical": "<span color='#f38ba8'></span>{capacity}%",
		"format-plugged": "<span color='#a6e3a1'></span>{capacity}%",
	},
	"cpu": {
		"interval": "1",
		"format": "<span color='#f9e2af'> </span>{usage}%",
		"on-click": "kitty -e htop --sort-key PERCENT_CPU",
	},
	"disk": {
		"interval": 30,
		//#eba0ac
		"format": "<span color='#eba0ac'> </span>{percentage_used}%",
		//"format": " {used}",
		"unit": "GB",
		"on-click": "nemo",
		"tooltip-format": " {used}"
	},
	"temperature": {
		// "thermal-zone": 2,
		"hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
		"critical-threshold": 75,
		"format": "<span color='#f38ba8'>{icon}</span> {temperatureC}°C",
		"format-critical": "{temperatureC}°C {icon}",
		"format-icons": [
			"",
			"",
			""
		]
	},
	"memory": {
		"format": "<span color='#94e2d5'> </span>{}%",
	},
	"backlight": {
		//"device": "acpi_video1",
		"format": "<span color='#f9e2af'>{icon}</span> {percent}%",
		"format-icons": [
			"",
			"",
			"",
			"",
			"",
			"",
			"",
			"",
			""
		],
		"tooltip-format": "{percent}%",
		"on-click": "brightnessctl set 100%;hyprctl notify 2 1000 0 Brightness: $(brightnessctl g | awk '{print $1/8}')%",
		"on-click-right":"brightnessctl set 5%;hyprctl notify 2 1000 0 Brightness: $(brightnessctl g | awk '{print $1/8}')%"
	},
	"wireplumber": {
		"format": "<span color='#cba6f7'>{icon} </span> {volume}%",
		"format-muted": "<span color='#f38ba8'> </span> {volume}%",
		"on-click": "$HOME/.config/scripts/toggle-mute.sh sink",
		"on-click-right": "pavucontrol -t 3",
		"format-icons": ["", "", "󰕾", ""], 
		"max-volume": 100,
	},
	"pulseaudio": {
		"scroll-step": 3, // %, can be a float
		"format": "<span color='#cba6f7'>{icon}</span> {volume}%",
		"format-muted": "<span color='#cba6f7'> </span> {volume}%",
		"format-bluetooth": "<span color='#cba6f7'>󰂰</span> {volume}%",
		"format-bluetooth-muted": "<span color='#cba6f7'>󰂲</span> {volume}%",
		"format-source": "  {volume}%",
		"on-click-right": "pavucontrol",
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"max-volume": 100,
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": [
				" ",
				" ",
				" "
			]
		},
	},
	"network": {
		// "interface": "wlp2*", // (Optional) To force the use of this interface
		"format-wifi": "  {essid}",
		"format-ethernet": "   {ipaddr}/{cidr}",
		"tooltip-format": "   {ifname} via {gwaddr}",
		"format-linked": "    {ifname} (No IP)",
		"format-disconnected": "⚠  Disconnected",
		"format-alt": "{ifname}: {ipaddr}/{cidr}",
		"on-click-right": "kitty -e nmtui",
	},
	"bluetooth": {
		"format": "<span color='#74c7ec'>󰂰</span>",
		"format-disabled": "<span color='#89b4fa'>󰂲</span>",
		"format-connected": "<span color='#89dceb'>󰂱</span>",
		"format-connected-battery": "<span color='#89dceb'>󰂱</span>",
		"tooltip-format": "{num_connections} connected",
		"tooltip-format-disabled": "Bluetooth Disabled",
		"tooltip-format-connected": "{num_connections} connected\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}",
		"tooltip-format-enumerate-connected-battery": "{device_alias}: {device_battery_percentage}%",
		"on-click": "blueman-manager",
		"interval": 1,
		"max-length": 10
	},
	"custom/weather": {
		"format": "{}",
		"exec": "curl 'https://wttr.in/?format=1'",
		//"exec": "curl 'https://wttr.in/'",
		"tooltip-format": "{}",
		"interval": 3600,
		"on-click": "kweather",
		"min-length": 5,
		"max-length": 10
	},
	"hyprland/language": {
		"format": "{}",
		"format-pt": "PT-BR",
	},
	"custom/power": {
		"format": "",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/custom_modules/power_menu.xml",
		"menu-actions": {
			"shutdown":  "sh -c 'echo $(wofi -d -P -p \"Password:\" --lines=1 --width=300) | sudo -S systemctl poweroff'",
			"reboot":    "sh -c 'echo $(wofi -d -P -p \"Password:\" --lines=1 --width=300) | sudo -S systemctl reboot'",
			"hibernate": "sh -c 'echo $(wofi -d -P -p \"Password:\" --lines=1 --width=300) | sudo -S systemctl hibernate'",
			"suspend":   "systemctl suspend"
		}
	},
}
