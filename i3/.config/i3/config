##########################
### MODS AND VARIABLES ###
##########################

set $mod Mod4
set $mod2 Mod1
font pango:0xProto Nerd Font Mono 12

###################
### DEFAULT APPS ###
###################
set $terminal kitty
set $fileManager nemo
set $browser firefox
set $calc kalk
set $notepad mousepad
set $music_player youtube-music
set $menu rofi -show drun -display-drun "Search"

#################
### AUTOSTART ###
#################

# Compositor
exec --no-startup-id picom -b

# Notification daemon
exec --no-startup-id dunst

# Polkit agent
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# X11 Settings
exec --no-startup-id /usr/lib/gsd-xsettings
exec --no-startup-id mpd

# Wallpaper
exec --no-startup-id feh --bg-fill /home/raphaelac/Pictures/wallpapers/castle.png

# Keyboard Layout
exec --no-startup-id setxkbmap br -model microsoftpro -option terminate:ctrl_alt_bksp

# Touchpad settings
exec --no-startup-id xinput set-prop "Elan Touchpad" "libinput Tapping Enabled" 1

#################
### POLYBAR   ###
#################

# Launch Polybar
exec_always --no-startup-id bash $HOME/.config/polybar/launch_polybar.sh

###################
### KEYBINDINGS ###
###################

# Program Launchers
bindsym $mod+Return exec $terminal
bindsym $mod+e exec $fileManager
bindsym $mod+b exec $browser
bindsym $mod+c exec $calc
bindsym $mod+d exec $menu
bindsym $mod+m exec $music_player
bindsym $mod+n exec $notepad
bindsym $mod+o exec obsidian

# Help & Scripts
bindsym $mod+i exec /home/raphaelac/.config/scripts/hotkeys.sh
bindsym $mod+t exec /home/raphaelac/.config/scripts/translate.sh
bindsym $mod+Shift+t exec /home/raphaelac/.config/scripts/translate.sh auto
bindsym $mod+Ctrl+t exec /home/raphaelac/.config/scripts/translate.sh switch
bindsym $mod+Shift+Ctrl+t exec /home/raphaelac/.config/scripts/translate.sh set
bindsym Ctrl+Shift+Escape exec $terminal -e htop 

# Reload / Restart
bindsym $mod+w reload
bindsym $mod+Shift+w exec pkill polybar && i3-msg restart
# bindsym $mod+Shift+p exec pkill polybar

# Window Control
bindsym $mod+Shift+q kill
bindsym $mod+f floating toggle
bindsym $mod+Shift+f fullscreen toggle
bindsym $mod+space focus mode_toggle

# Window Layout 
bindsym $mod+s layout toggle split
bindsym $mod+p layout toggle tabbed
bindsym $mod2+Shift+s layout stacking
bindsym $mod2+Shift+t layout tabbed
bindsym $mod2+s layout toggle split
bindsym $mod+Ctrl+h split h
bindsym $mod+Ctrl+v split v

# Power Management
bindsym $mod2+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod2+Shift+Delete exec "i3-nagbar -t warning -m 'Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod2+Shift+l exec "i3lock -i /home/raphaelac/Pictures/wallpapers/literati.png"
bindsym $mod2+Shift+p exec systemctl poweroff
bindsym $mod2+Shift+r exec systemctl reboot
bindsym $mod2+Shift+h exec systemctl hibernate

# Focus Movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+a focus parent

# Workspace Navigation
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Switch workspaces 1-10
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move Windows in the same workspace
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Move Windows to other workspaces 1-10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Mouse Windows Control
floating_modifier $mod

# Resize with Arrows
bindsym $mod+Ctrl+Left resize shrink width 3 px or 3 ppt
bindsym $mod+Ctrl+Up resize grow height 3 px or 3 ppt
bindsym $mod+Ctrl+Down resize shrink height 3 px or 3 ppt
bindsym $mod+Ctrl+Right resize grow width 3 px or 3 ppt

# Multimedia & Brightness
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86MonBrightnessUp exec brightnessctl s 5%+
bindsym XF86MonBrightnessDown exec brightnessctl s 5%-

# Media Control (mpv)
bindsym XF86AudioPlay  exec "mpv toggle"
bindsym XF86AudioStop  exec "mpv stop"
bindsym XF86AudioNext  exec "mpv next"
bindsym XF86AudioPrev  exec "mpv prev"
bindsym XF86AudioPause exec "mpv pause"

# Recording
bindsym $mod+g exec /home/raphaelac/.config/scripts/recording.sh

# Screenshot
bindsym Print exec scrot '/home/raphaelac/Screenshots/%Y-%m-%d_%H-%M-%S.png'
bindsym $mod+Shift+s exec scrot -s '/home/raphaelac/Screenshots/%Y-%m-%d_%H-%M-%S.png'


