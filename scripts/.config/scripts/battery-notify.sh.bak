#!/bin/sh

while true; do
  bat_lvl=$(cat /sys/class/power_supply/BAT1/capacity)
  bat_status=$(cat /sys/class/power_supply/BAT1/status)
  brightness=$(brightnessctl get)

  if [ "$bat_status" = "Charging" ]; then
    if [ "$brightness" -le 240 ]; then
      notify-send -u low -t 3000 "Battery Charging - Level: ${bat_lvl}%"
      brightnessctl set 100%
    fi
    sleep 600
    continue

  elif [ "$bat_status" = "Full" ]; then
    notify-send -u low -t 3000 "Battery Full - Level: ${bat_lvl}%"
    sleep 1200

  elif [ "$bat_lvl" -le 5 ]; then
    notify-send -u critical "âš  CRITICAL Battery - Level: ${bat_lvl}%"

    if [ "$brightness" != 240 ]; then
      brightnessctl set 30%
    fi
    sleep 1

  elif [ "$bat_lvl" -le 15 ]; then
    notify-send -u normal -t 3000 "Battery Low - Level: ${bat_lvl}%"
    sleep 120 

  elif [ "$bat_lvl" -le 30 ]; then
    sleep 180

  else
    sleep 240
  fi
done
